html
    head
        title= name
        meta(charset="utf-8")
        link(type="text/css", rel="stylesheet", href="/css/public/item.css")
        link(type="text/css", rel="stylesheet", href="/css/common/bootstrap/css/bootstrap.css")
        script(type="text/javascript", src="/js/common/jquery.js")
    body
        p(class="id")= id
        p(class="name")= name
        p(class="category")= category
        div(class="images")
            if item.images[0]
                div(id="Images", class="carousel slide", data-ride="carousel")
                  ol(class="carousel-indicators")
                      - for (let i = 0; i < item.images.length; i++)
                          if i == 0
                            li(data-target="#Images", data-slide-to=i, class="active")
                          else
                            li(data-target="#Images", data-slide-to=i)
                  div(class="carousel-inner")
                    - for (let i = 0; i < item.images.length; i++)
                        if i == 0
                            div(class="carousel-item active")
                                img(class="d-block w-100", src=item.images[i], alt=item.name)
                        else
                            div(class="carousel-item")
                                img(class="d-block w-100", src=item.images[i], alt=item.name)
                  a(class="carousel-control-prev", href="#Images", role="button", data-slide="prev")
                    span(class="carousel-control-prev-icon", aria-hidden="true")
                    span(class="sr-only") Previous
                  a(class="carousel-control-next", href="#Images", role="button", data-slide="next")
                    span(class="carousel-control-next-icon", aria-hidden="true")
                    span(class="sr-only") Next
            else
                img(class="d-block w-100", src="/images/no_photo.png", alt=item.name)
        div(class="item")

        include footer
        script(type="text/javascript", src="/js/common/bootstrap/js/bootstrap.bundle.js")
        script(type="text/javascript", src="/js/public/item.js")